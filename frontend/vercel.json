{
  "rewrites": [
    {
      "source": "/:path((?!api/|sitemap.xml|robots.xml|favicon.svg|logo.svg|og-image.png|apple-touch-icon.png).*)",
      "destination": "/",
      "missing": [
        { "type": "file" },
        { "type": "header", "key": "x-prerender-revalidate" }
      ]
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ]
}
